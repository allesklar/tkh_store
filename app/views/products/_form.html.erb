<%= simple_form_for @product,  html: { role: 'form', multipart: true } do |f| %>
	<%= f.error_notification %>

		<%= f.input :name,
								hint: 'each soap should have a nice name',
								input_html: { size: 60 } %>

	  <%= f.input :description,
                hint: 'not visible on site but think of best description for Google search results',
                as: :text,
                input_html: { cols: 60, rows: 5 } %>

		<%= f.input :ingredients,
								hint: 'write them all, separated by commas',
								as: :text, input_html: { cols: 60, rows: 5 } %>

    <%= f.input :body,
                hint: "don't try to stylize but do structure the document with headings, bullet lists, etc. and use the bolding with parcimony",
                as: :text, input_html: { rows: 25, class: 'ckeditor' } %>

    <%= f.input :image,
                label: 'Main Image',
                hint: "Used in product page and social media links. Ideal ratio: 1.91x1 - between 1.6x1 to 2.25x1 is okay. 400px wide at the very least. 1,200px wide or more recommended." %>

    <%= f.association :category %>

    <%= f.button :submit, class: 'btn btn-primary' %>

<% end %>
